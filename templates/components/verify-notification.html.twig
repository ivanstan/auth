{% if app.user is not null and app.user.verified == false %}
    <div class="alert alert-warning mb-0 sticky-bottom" role="alert" data-test="verify-notification">
        {{ "Your account is not verified."|trans({'%email%': app.user.email})|raw }}

        <form class="d-inline-block" method="post" action="{{ path('security_verify') }}">
            <input type="hidden" name="_method" value="POST">
            <input type="hidden" name="_token" value="{{ csrf_token('verify' ~ app.user.id) }}">
            <button class="bg-transparent border-0 px-0"><u>{{ "Request verification"|trans }}</u>.</button>
        </form>
    </div>
{% endif %}
