{% extends 'base.html.twig' %}

{% block title %}{{ "User management"|trans }} {{ parent() }}{% endblock %}

{% block body %}
    {% include 'components/navbar.html.twig' %}

    <div class="container-fluid mt-3">

        <div class="row">
            <div class="col-12">
                {% include 'components/messages.html.twig' %}
            </div>
        </div>

        {#        <div class="row">#}
        {#            <div class="col-3">#}
        {#                <form method="get" class="d-flex mb-3">#}
        {#                    <input class="form-control mr-2" type="text" name="search" />#}
        {#                    <input type="hidden" name="page" value="{{ app.request.get('page') }}">#}
        {#                    <input class="btn btn-primary" type="submit" value="{{ 'Search'|trans }}" />#}
        {#                </form>#}
        {#            </div>#}
        {#        </div>#}

        <div class="row mb-3">
            <div class="col-12">
                <a class="btn btn-primary" href="{{ path('user_new') }}">{{ "New"|trans }}</a>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <table class="table">
                    <thead>
                    <tr>
                        <th>{{ 'Email'|trans }}</th>
                        <th class="d-none d-sm-table-cell">{{ 'Roles'|trans }}</th>
                        <th class="d-none d-sm-table-cell">{{ 'Created'|trans }}</th>
                        <th class="d-none d-sm-table-cell text-center">{{ 'Active'|trans }}</th>
                        <th class="text-center">{{ 'Actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in pager.currentPageResults %}
                        <tr data-user="edit-user-{{ user.email }}">
                            <td>{{ user.email }}</td>
                            <td class="d-none d-sm-table-cell">
                                {% for role in user.roles %}
                                    <span
                                        class="badge badge-secondary">{{ role|replace({'ROLE_': '' })|capitalize|trans }}</span>
                                {% endfor %}
                            </td>
                            <td class="d-none d-sm-table-cell">
                                {% include 'components/date-field.html.twig' with {date: user.createdAt} only %}
                            </td>
                            <td class="d-none d-sm-table-cell text-center">
                                {% if user.active %}
                                    <span class="badge badge-success">{{ 'Yes'|trans }}</span>
                                {% else %}
                                    <span class="badge badge-danger">{{ 'No'|trans }}</span>
                                {% endif %}
                            </td>
                            <td class="d-flex justify-content-center">
                                <a class="btn btn-outline-primary mr-2 edit-button" href="{{ path('user_edit', {'id': user.id}) }}">
                                    <i class="fas fa-edit"></i></i>
                                </a>
                                <div class="float-right">
                                    {% include 'components/delete-button.html.twig' with {
                                        'action': path('user_delete', {'id': user.id}),
                                        'csrf': csrf_token('delete' ~ user.id),
                                        'entity': 'user'
                                    } only %}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">{{ 'No results found'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% include 'components/pager.html.twig' with {pager: pager} only %}

{% endblock %}
