<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{{ app_name }}{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    {% endblock %}
</head>
<body>
{% block body %}
    {% include 'components/verify-notification.html.twig' %}
    <div id="react-root"></div>
    {% include 'components/messages.html.twig' %}
{% endblock %}
{% block javascripts %}
    {% include('components/globals.html.twig') %}
    <script src="https://kit.fontawesome.com/f3739e2a5a.js" crossorigin="anonymous"></script>
    <script src="{{ asset('build/runtime.js') }}"></script>
    <script src="{{ asset('build/vendors~app.js') }}"></script>
    <script src="{{ asset('build/app.js') }}"></script>
{% endblock %}
</body>
</html>
