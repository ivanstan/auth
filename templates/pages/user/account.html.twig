{% extends 'base.html.twig' %}

{% block title %}{{ 'Account settings'|trans }} {{ parent() }}{% endblock %}

{% block body %}
    {% include 'components/navbar.html.twig.html' %}
    <div class="container my-3">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                {% include 'components/messages.html.twig' %}
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h1 class="mb-3">{{ 'Change password'|trans }}</h1>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {% include 'components/form-submit.html.twig' with {'title':'Submit'|trans } only %}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
