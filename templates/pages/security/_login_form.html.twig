<form method="post">

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="form-group">
        <label for="inputEmail" class="sr-only">{{ 'Email'|trans }}</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
               placeholder="Email" required autofocus {{ test('login-email') }}>
    </div>
    <div class="form-group">
        <label for="inputPassword" class="sr-only">{{ 'Password'|trans }}</label>
        <input type="password" name="password" id="inputPassword" class="form-control view-password" placeholder="Password"
               required {{ test('login-password') }}>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="checkbox mb-3 d-none">
        <input type="checkbox" name="_remember_me" id="remember_me" checked/>
        <label for="remember_me">{{ 'Remember me'|trans }}</label>
    </div>

    <div class="text-center mb-3">
        <a href="{{ path('security_recovery') }}">{{ 'Have trouble logging in?'|trans }}</a>
    </div>

    <div class="text-center mb-3">
        <a href="{{ path('security_register') }}">{{ 'Don\'t have account? Register'|trans }}</a>
    </div>

    {% include 'components/form-submit.html.twig' with {'title':'Login'|trans } only %}
</form>
