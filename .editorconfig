; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
indent_style = space
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php, html, twig, yaml, json}]
indent_size = 4

[*.{js, ts, tsx}]
indent_size = 2

[*.md]
max_line_length = 80

[COMMIT_EDITMSG]
max_line_length = 0
